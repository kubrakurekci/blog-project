
<% blogs.forEach(newPost => { %>
<div class="container px-4 py-3" id="featured-3">
  <div class="d-flex align-items-center justify-content-between border p-3 rounded shadow-sm">
      <img src="/assets/pp.jpg" class="user-photo me-1" alt="user-photo" />
    <div class="d-flex flex-column align-items-start justify-content-end flex-grow-1 mx-3">
    <p class="text-muted mb-1 mx-3 small"><%=newPost.time %> önce yazdı</p>
    <p class="flex-grow-1 mx-3">
     <%= newPost.content %>
    </p>
    </div>
    <div class="d-flex flex-column align-items-end">
      <a href="/edit/<%= newPost.id %>" class="edit-icon"> Edit </a>
    <a href="/delete/<%= newPost.id %>" class="delete-icon"> Delete</a>
</div>
    </div>
  </div>
</div>
<% }); %>